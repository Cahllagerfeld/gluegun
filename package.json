{
  "name": "@webstone/gluegun",
  "version": "0.0.2",
  "description": "A delightful toolkit for building Node-powered CLIs.",
  "repository": "webstoneHQ/gluegun",
  "bin": {
    "gluegun": "bin/gluegun"
  },
  "main": "build/index.js",
  "types": "build/types/index.d.ts",
  "scripts": {
    "format": "prettier --write \"{**/*.ts,**/*.js,.circleci/**/*.js}\" --loglevel error && eslint . --fix",
    "clean-build": "rimraf ./build && node ./.circleci/removeDirect.js",
    "compile": "tsc -p .",
    "copy-templates": "cp -a ./src/cli/templates ./build/cli/",
    "create-direct": "node ./.circleci/createDirect.js",
    "clean-types": "node .circleci/cleanDir.js ./build/types",
    "build": "yarn format && yarn clean-build && yarn compile && yarn copy-templates && yarn create-direct && yarn clean-types && echo 'Run yarn clean-build to remove build artifacts.'",
    "lint": "eslint .",
    "integration": "yarn build && jest --config=./.circleci/jest-integration.config.json",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "windows:test": "yarn && yarn format && yarn test && yarn clean-build && yarn compile && yarn copy-templates && jest --config=./.circleci/jest-integration.config.json",
    "ci:test": "yarn lint && yarn test --maxWorkers=2 && yarn integration",
    "ci:publish": "yarn build && yarn semantic-release",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "author": {
    "name": "Infinite Red, Inc.",
    "email": "npm@infinite.red",
    "url": "https://github.com/infinitered/gluegun"
  },
  "contributors": [{"name": "Webstone", "url": "https://github.com/WebstoneHQ"}],
  "files": [
    "docs",
    "bin",
    "build",
    "sniff.js",
    "sniff-async.js",
    "toolbox.js",
    "filesystem.js",
    "strings.js",
    "print.js",
    "system.js",
    "semver.js",
    "http.js",
    "patching.js",
    "prompt.js",
    "LICENSE",
    "readme.md"
  ],
  "license": "MIT",
  "dependencies": {
    "apisauce": "^2.1.6",
    "app-module-path": "^2.2.0",
    "cli-table3": "0.6.3",
    "colors": "1.4.0",
    "cosmiconfig": "7.0.1",
    "cross-spawn": "7.0.3",
    "ejs": "3.1.8",
    "enquirer": "2.3.6",
    "execa": "6.1.0",
    "fs-jetpack": "5.0.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.lowercase": "^4.3.0",
    "lodash.lowerfirst": "^4.3.1",
    "lodash.pad": "^4.5.1",
    "lodash.padend": "^4.6.1",
    "lodash.padstart": "^4.6.1",
    "lodash.repeat": "^4.1.0",
    "lodash.snakecase": "^4.1.1",
    "lodash.startcase": "^4.4.0",
    "lodash.trim": "^4.5.1",
    "lodash.trimend": "^4.5.1",
    "lodash.trimstart": "^4.5.1",
    "lodash.uppercase": "^4.3.0",
    "lodash.upperfirst": "^4.3.1",
    "ora": "6.1.2",
    "pluralize": "^8.0.0",
    "semver": "7.3.7",
    "which": "2.0.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@types/cli-table2": "0.2.3",
    "@types/jest": "29.0.3",
    "@types/node": "18.7.19",
    "@types/pluralize": "0.0.29",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "cpy-cli": "4.2.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-standard": "5.0.0",
    "expect": "29.0.3",
    "husky": "^8.0.1",
    "jest": "29.0.3",
    "jest-mock": "29.0.3",
    "lint-staged": "13.0.3",
    "mock-stdin": "1.0.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "sinon": "14.0.0",
    "strip-ansi": "7.0.1",
    "temp-write": "5.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.3",
    "unique-temp-dir": "1.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
